<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
            <!-- Change the stroke color to black or gray for visibility -->
            <stroke
                android:width="2dp"
                android:color="@android:color/darker_gray" />
            <!-- Ensure the size of the circle -->
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
</selector>
